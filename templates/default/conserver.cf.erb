# Generated by Chef.
# Local modifications will be overwritten.

config * {
}

default full {
  rw *;
}

default * {
  logfile <%= node['conserver']['logfile'] %> ;
  timestamp "";
  include full;
}

access * {
  allowed <%= node['conserver']['access']['allowed'] %>;
}

# List of servers.

<% @servers.each do |server| %>
console <%= server['hostname'] %> {
  master localhost;
  type exec;
  exec <%= node['conserver']['ipmi']['command'] % [ server['ipmi']['address'], node['conserver']['ipmi']['user'] ] %>;
  idletimeout <%= node['conserver']['idletimeout'] %>;
}
<% end %>
